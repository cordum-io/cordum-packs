{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KubernetesTriage Action Input",
  "type": "object",
  "properties": {
    "profile": {
      "type": "string",
      "description": "Named integration profile to use."
    },
    "action": {
      "type": "string",
      "description": "Action identifier, e.g. pods.list, events.list, deployments.restart."
    },
    "params": {
      "type": "object",
      "description": "Action-specific parameters."
    },
    "request_id": {
      "type": "string",
      "description": "Optional idempotency or trace id."
    }
  },
  "required": [
    "action"
  ]
}
