{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PrometheusQuery Action Input",
  "type": "object",
  "properties": {
    "profile": {
      "type": "string",
      "description": "Named integration profile to use."
    },
    "action": {
      "type": "string",
      "description": "Action identifier, e.g. query.instant, query.range, alerts.list."
    },
    "params": {
      "type": "object",
      "description": "Action-specific parameters."
    },
    "request_id": {
      "type": "string",
      "description": "Optional idempotency or trace id."
    },
    "auth": {
      "type": "object",
      "description": "Optional inline auth (must be enabled in worker config).",
      "properties": {
        "token": {
          "type": "string"
        },
        "token_env": {
          "type": "string"
        },
        "basic_username": {
          "type": "string"
        },
        "basic_username_env": {
          "type": "string"
        },
        "basic_password": {
          "type": "string"
        },
        "basic_password_env": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "action"
  ]
}
